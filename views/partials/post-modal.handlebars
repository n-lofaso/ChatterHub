<div id="overlay" aria-hidden class="c-overlay c-overlay--dismissible"></div>
<div id="modal" role="dialog" class="o-modal o-modal--dismissible">
  <div class="c-card">
    <header class="c-card__header">
      <h2 class="c-heading">Create a new Post</h2>
    </header>
    <details class="custom-select">
      <summary class="radios">
        <input
          type="radio"
          name="item"
          id="default"
          title="Select an Interest"
          checked
        />
        <input onclick="getvalue()" type="radio" name="item" id="item1" title="Video Games" value="video-games"/>
        <input onclick="getvalue()" type="radio" name="item" id="item2" title="Movies and Television" value="movies-and-television"/>
        <input onclick="getvalue()" type="radio" name="item" id="item3" title="Food and Travel" value="food-and-travel"/>
        <input onclick="getvalue()" type="radio" name="item" id="item4" title="LFG" value="lfg"/>
        <input onclick="getvalue()" type="radio" name="item" id="item5" title="Music" value="music">
        <input onclick="getvalue()" type="radio" name="item" id="item6" title="Technology" value="technology"/>
      </summary>
      <ul class="list list-item c-list c-list--unstyled">
        <li class="c-list__item c-list__item--unstyled dropdown-list">
          <label for="item1">
            Video Games <i class="fa-solid fa-gamepad"></i>
          </label>
        </li>
        <li class="c-list__item c-list__item--unstyled dropdown-list">
          <label for="item2">Movies and Television <i class="fa-solid fa-film"></i></label>
        </li>
        <li class="c-list__item c-list__item--unstyled dropdown-list">
          <label for="item3">Food and Travel <i class="fa-solid fa-earth-americas"></i></label>
        </li>
        <li class="c-list__item c-list__item--unstyled dropdown-list">
          <label for="item4">LFG <i class="fa-solid fa-headset"></i></label>
        </li>
        <li class="c-list__item c-list__item--unstyled dropdown-list">
          <label for="item5">Music <i class="fa-solid fa-compact-disc"></i></label>
        </li>
        <li class="c-list__item c-list__item--unstyled dropdown-list">
          <label for="item6">Technology <i class="fa-solid fa-gear"></i></label>
        </li>
      </ul>
    </details>
    <div class="c-card__body">
      <input
        id="post-title"
        class="c-field u-large"
        placeholder="Title..."
        type="text"
      />
    </div>
    <div class="c-card__body">
      <textarea
        id="post-body"
        class="c-field u-medium"
        placeholder="Description..."
      ></textarea>
    </div>
    <footer class="c-card__footer">
      <button
        id="cancel-button"
        type="button"
        class="c-button c-button--error u-large bt"
      >
        Cancel
      </button>
      <button
        id="post-button"
        type="button"
        class="c-button c-button--warning u-large right"
      >
        Post
      </button>
    </footer>
  </div>
</div>