<div id="overlay" aria-hidden class="c-overlay c-overlay--dismissible"></div>
    <div id="modal" role="dialog" class="o-modal o-modal--dismissible">
      <div class="c-card">
        <header class="c-card__header">
          <h2 class="c-heading">Create a new Post</h2>
        </header>

        <div class="c-card__body">
          <input
            class="c-field u-large"
            placeholder="Title..."
            type="text"
          />
        </div>
        <div class="c-card__body">
          <textarea
            class="c-field u-medium"
            placeholder="Description..."
          ></textarea>
        </div>

        <footer class="c-card__footer">
          <button id="cancel-button" type="button" class="c-button c-button--error u-large bt">
            Cancel
          </button>
          <button id="post-button" type="button" class="c-button c-button--warning u-large right">
            Post
          </button>
        </footer>
      </div>
    </div>